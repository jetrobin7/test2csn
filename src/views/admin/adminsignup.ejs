<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;700&display=swap" rel="stylesheet"> <!-- Baloo 2 font -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet"> <!-- Bootstrap Icons -->
    <style>
        body {
            background-color: #f8f9fa; /* Light background for contrast */
            font-family: 'Baloo 2', sans-serif; /* Consistent font */
        }
        .card-body {
            max-width: 400px; /* Limit the width for a cleaner look */
            margin: auto; /* Center the form */
            margin-top: 70px;
            padding: 20px;
            background-color: white; /* White background for the form */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }
        .form-control {
            font-size: 15px; /* Consistent font size */
        }
        .lead {
            font-size: 12px; /* Smaller text for the lead */
        }
    </style>
</head>

<body>
    <div class="card-body p-4">
        <h2 class="text-center mb-4">Create an Admin Account</h2>
        <form action="./adminsignup" method="post" id="registerForm">
            <div class="row">
                <script>
                    function makeUpperCase(input) {
                    input.value = input.value.toUpperCase();
                }
                </script>

                <div class="col-md-12 mb-2">
                    <div class="form-group">
                        <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Last Name" required oninput="capitalizeFirstLetter(this)">
                    </div>
                </div>

                <div class="col-md-12 mb-2">
                    <div class="form-group">
                        <input type="text" id="firstName" name="firstName" class="form-control" placeholder="First Name" required oninput="capitalizeFirstLetter(this)">
                    </div>
                </div>

                <div class="col-md-12 mb-2">
                    <div class="form-group">
                        <input type="text" id="username" name="username" class="form-control" placeholder="Username" required>
                    </div>
                </div>

                <div class="col-md-12 mb-2">
                    <div class="form-group">
                        <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
                    </div>
                </div>

                <div class="col-md-12 mb-2">
                    <!-- Password field with toggle visibility functionality -->
                    <div class="form-group">
                        <div class="input-group">
                            <input type="password" id="password" name="password" class="form-control" placeholder="Password" required oninput="validatePassword(this)">
                            <span class="input-group-text" style="cursor:pointer;" onclick="togglePasswordVisibility('password', 'togglePasswordIcon')">
                                <i class="bi bi-eye" id="togglePasswordIcon"></i>
                            </span>
                        </div>
                    </div>

                    <!-- Confirm password field with toggle visibility functionality -->
                    <div class="form-group">
                        <div class="input-group">
                            <input type="password" id="password2" class="form-control" placeholder="Confirm Password" required>
                            <span class="input-group-text" style="cursor:pointer;" onclick="togglePasswordVisibility('password2', 'toggleConfirmPasswordIcon')">
                                <i class="bi bi-eye" id="toggleConfirmPasswordIcon"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>
        <p class="lead mt-4">Go to Login? <a href="/adminlogin">Login</a></p>
    </div>
    
    <script>
        function togglePasswordVisibility(inputId, iconId) {
            var input = document.getElementById(inputId);
            var icon = document.getElementById(iconId);
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        function validatePassword(input) {
            var password = input.value;
            var passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()\-_=+{};:,<.>]).{8,}$/;
            var isValid = passwordRegex.test(password);

            if (!isValid) {
                input.setCustomValidity("Password must contain at least one uppercase letter, one lowercase letter, one number, and one special character.");
            } else {
                input.setCustomValidity("");
            }
        }
    </script>
</body>
</html>