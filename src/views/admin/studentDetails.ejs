<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Progress Details</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Progress Details for <%= student.surname %> <%= student.givenName %> <%= student.middleName %></h1>
  <p>Diagnosis: <%= student.diagnosis %></p>
  <p>Category: <%= student.category %></p>

  <% student.therapySessions.forEach(session => { %>
    <div>
      <h3><%= session.typeOfTherapy %></h3>
      <p>Teacher: <%= session.teacher %></p>
      <p>Category: <%= session.category %></p>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% session.details.forEach(detail => { %>
            <tr>
              <td><%= detail.date %></td>
              <td><%= detail.time %></td>
              <td><%= detail.status %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% }) %>

  <a href="/admin/studentProgress">Back to Student List</a>
</body>
</html>
