<!DOCTYPE html>
<html lang="en">

<head>
    <title>Teacher Dashboard</title>
    <link rel="stylesheet" href="/assets/dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/tsidebar') %>
    <%- include('../partials/navbar') %>

    <!-- Main Content -->
    <div class="dashboard">
        <div class="main-content">
            <div class="container mt-4">
                
                <!-- Buttons Section -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <a href="/teacher/t_schedule" class="btn btn-primary w-100">
                            <i class="bx bxs-calendar"></i> Schedule
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/teacher/student-list" class="btn btn-primary w-100">
                            <i class='bx bxs-group'></i> Student List
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/student_progress" class="btn btn-primary w-100">
                            <i class='bx bxs-bar-chart-square'></i> Student Progress
                        </a>
                    </div>
                </div>


                <!-- Example Data Table -->
                <div class="row">
                    <div class="col-12">
                        <h2>New Students</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>CSN No.</th>
                                    <th>Student Name</th>
                                    <th>Age</th>
                                    <th>Diagnosis</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (newStudents && newStudents.length > 0) { %>
                                    <% newStudents.forEach(student => { %>
                                        <tr>
                                            <td><%= student.csnNumber %></td>
                                            <td><%= student.name %></td>
                                            <td><%= student.age %></td>
                                            <td><%= student.diagnosis %></td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4">No new students found.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                            
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>